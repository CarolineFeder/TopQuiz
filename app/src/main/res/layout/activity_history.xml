<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rmicaroline.topquiz.Controleur.HistoryActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_history_greeting_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="The score history "></TextView>

    <TextView
        android:id="@+id/activity_history_player1_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Toto"></TextView>

    <TextView
        android:id="@+id/activity_history_player2_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Tata"></TextView>

    <TextView
        android:id="@+id/activity_history_player3_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Titi"></TextView>

    <TextView
        android:id="@+id/activity_history_player4_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Tutu"></TextView>
    <TextView
        android:id="@+id/activity_history_player5_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Tete"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/activity_history_perScore_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Per Score"/>

    <Button
        android:id="@+id/activity_history_perName_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Per Name"/>
    </LinearLayout>




</LinearLayout>
